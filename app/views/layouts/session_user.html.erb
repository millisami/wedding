<![endif]-->

<%= javascript_include_tag :defaults %>
<%= javascript_include_tag 'lightbox' %>
<%= javascript_include_tag 'modalbox' %>
</head>
<body>
<div class="wrapper">
  <div class="header">
    <ul class="headerTopLeft">
      <li><%= link_to "Startpage", root_path %></li>
      <li class="separator">|</li>
      <li><%= link_to "Contact Us", "#", :onclick => "onClickLightbox('/pages/2')" %></li>

    </ul>
    <ul class="headerTopRight">
      <li>Wedding Cards </li>
      <li><a href="#">Christmas Cards</a></li>
      <li><a href="#">Bags &amp; Boxes</a></li>
    </ul>
    <div class="headetBot"> <img src="/images/logo.jpg" class="logo" alt="Handmade Wedding Invitations" /> <img src="/images/card_design.jpg" alt="Card Design" /> </div>
  </div>
  <%#= image_tag 'indicator.gif', :id => 'form-indicator', :style => 'display:none;' %>
  <div id="form-indicator" style="display:none;">Loading...</div>
  <ul class="nav">
    <li class="done pr themes"><%= link_to '', root_path %></li>
    <li class="current"><img src="/images/txt_format-products-current.gif" /></li>
    <li><img src="/images/txt_style.gif" /></li>
    <li><%= link_to image_tag("txt_text.gif"), save_cart_path, :id => 'save_cart_menu', :class => '', :title => 'Save cart', :onclick => "Modalbox.show(this.href, {title: this.title, width: 600}); return false;" %></li>

    <li><%= link_to image_tag("/images/txt_preview.gif"), {:controller => :sites, :action => 'show_cart'}, :id => 'show_cart_menu', :class => 'lbOn' %></li>
    <li><%= link_to_remote image_tag("/images/txt_order.gif"),
                :url => '/checkout',
                :method => :get,
                :id => 'checkout_menu' %></li>
    <li><img src="/images/txt_confirmation.gif" /></li>
  </ul>
  <div class="content clearfix">
    <div id="contentTop" class="clearfix">
      <% flash.each do |key, msg| %>
      <%= content_tag :p, msg, :id => key, :class => 'flash' %>
      <% end %>
      <%= yield %> </div>
    <!-- contentTop -->

   
    <div class="bottom">
      <div class="footer">
        <ul class="footerLeft">
          <li>Startpage</li>
          <li class="separator">|</li>
          <li><%= link_to "Contact Us", page_path(2), :title => 'Contact Us', :onclick => "Modalbox.show(this.href, {title: this.title, width: 600}); return false;"  %></li>
          <li class="separator">|</li>
          <li><a href="#">Shipping</a></li>
          <li class="separator">|</li>
          <li><a href="#">Coockies</a></li>
        </ul>
        <div class="footerRight"> PHONE 00977-1-4700253  |  E-MAIL <a href="#">info@handmade-weddingcards.com</a><br />
          Copyright Â© Handmade Wedding Invitations 2007 </div>
      </div>
      <ul class="footerBot">
        <li>Wedding Cards </li>
        <li><a href="#">Christmas Cards</a></li>
        <li><a href="#">Bags &amp; Boxes</a></li>
      </ul>
    </div>
  </div>
  <div id="inline-sample" style="display: none;">
    <div>
