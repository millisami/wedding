<h1>Listing products</h1>

<table cellpadding="0" cellspacing="0" border="0" class="sortable" id="sorter">
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th class="nosort">Image</th>
    <th class="nosort">PDF</th>
    <th class="nosort">&nbsp;</th>
    <th class="nosort">&nbsp;</th>
    <th class="nosort">&nbsp;</th>
  </tr>

<% for product in @products %>
  <tr>
    <td><%=h product.name %></td>
    <td><%=h product.product_set.name %></td>
    <td><%= image_tag(product.image.public_filename, :size => '28x28') if product.image %></td>
	<td><%= link_to image_tag('pdf-icon.png'), product.document.url, :target => "_blank" %>
    <td><%= link_to 'Show', [:admin, product] %></td>
    <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
    <td><%= link_to 'Destroy', [:admin, product], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New product', new_admin_product_path %>

<script type="text/javascript">
var sorter=new table.sorter("sorter");
sorter.init("sorter",1);
</script>
