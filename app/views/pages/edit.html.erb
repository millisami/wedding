<%= error_messages_for :page %>

<% form_for(@page) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title, :size => 60 %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body, :cols => 60, :rows => 20 %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @page %> |
<%= link_to 'Back', pages_path %>
