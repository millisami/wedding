<div id="innercontentBot" class="clearfix">
    <div class="contentDesignDetail">
        <div class="contentDesignTxt">
            Click on any product to customize it with your own text & colors.
        </div>
        <% @products.each_with_index do |product,x| %>
            <div class="contentDesignSub<%= x + 1%>">
                <% form_remote_tag(:url => add_to_cart_site_path(product), :html => { :id => "form#{x+1}", :name => "form#{x+1}" }) do -%>
                    <%= link_to image_tag("#{product.image.public_filename if product.image}", :alt => product.name), (product.document.url if product.document), :class => 'img'  %>
                    <div class="contentDesignSubBot<%= x + 1%>">
                        <%=h product.name %><br/>
                        <%= hidden_field_tag('id', product.id) %>
                        <%= text_field_tag("quantity") %><span class="txtgrey"><%= product.price %>/pcs</span>
                    </div>
                    <!-- <div class="addCart"><%= link_to_function "Add to cart", update_page { |page|
            page["form#{x+1}"].submit
        } %></div> -->
    <%- end -%>

    <%= observe_form "form#{x+1}", :url => add_to_cart_site_path(product), :on => 'changed' %>
            </div>

        <%- end -%>
    </div>

    <ul class="contentBotMenu">
        <li class="tax"><%= modalbox_link_to "Â» Taxes & delivery costs", { :url => tax_delivery_cost_path, :width => "600" }, :title => 'Tax and Delivery Cost'%></li>
        <li>Total price excl. taxes & delivery costs:</li>
        <li><span id="cart_total"><%= @cart.total_price %>  SEK</span></li>
        <li class="fr"><%= select_tag(:exchange_rate, "<option>Currency</option>" + options_from_collection_for_select(@exchange_rate, :currency, :currency, session[:exchange_currency])) %>

            <%= observe_field  'exchange_rate',
              :url => change_currency_site_path(2),
              :method => :put,
              :on => 'change',
              :with => 'exchange_rate'
        %></li>
    </ul>
    <ul class="btns">
        <li class="prev btnPrev"><a href="#"/></li>
        <li class="next btnNext btnNext1"><a href="#"/></li>
    </ul>
</div>
